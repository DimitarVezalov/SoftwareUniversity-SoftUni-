@if (User == null)
{
    <div class="container bg-blur mt-5">
        <h1>Welcome to Andrey's</h1>
        <hr class="my-3" />
        <p class="h4">On our website you will find the best clothes to match your style.</p>
        <hr class="my-3" />
        <h3>
            <a class="text-primay" href="/Users/Login">Login</a>
            if you have an account or
            <a class="text-primay" href="/Users/Register">Register</a>
            now and check our deals.
        </h3>
    </div>
}
@else
{
    <h1 class="text-center"><span class="badge badge-pill badge-dark">Products</span></h1>
    <div class="bg-blur container">
        <div class="row">
            @foreach (var product in @Model)
            {
                <div class="col-3 text-center">
                    <a href="/Products/Details?id=@product.Id"><img src=@product.ImageUrl class="img-fluid" width="200" height="200" /></a>
                    <h5 class="text-center">@product.Name</h5>
                    <h2 class="text-center">@product.Price</h2>
                </div>
            }
        </div>
    </div>
}